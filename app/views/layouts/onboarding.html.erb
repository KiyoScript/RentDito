<!DOCTYPE html>
<html
  lang="en"
  class="light-style layout-navbar-fixed layout-menu-fixed layout-compact"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="../../assets"
  data-template="vertical-menu-template-no-customizer"
  data-style="light">
  <head>
    <title>RentDito</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <!-- Favicon -->
    <%# <link rel="icon" type="image/x-icon" href="#" /> %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />

    <!-- Icons -->
    <%= stylesheet_link_tag "boxicons", "data-turbo-track": "reload" %>
    <!-- Core CSS -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!-- Core CSS -->
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>

    <script>
      (function () {
        const currentTime = new Date();
        const hours = currentTime.getHours();

        const isDarkTheme = hours >= 20 || hours < 5;

        const head = document.head;

        if (isDarkTheme) {
          const darkCoreLink = document.createElement('link');
          darkCoreLink.rel = 'stylesheet';
          darkCoreLink.href = '<%= asset_path("core-dark.css") %>';
          head.appendChild(darkCoreLink);

          const darkThemeLink = document.createElement('link');
          darkThemeLink.rel = 'stylesheet';
          darkThemeLink.href = '<%= asset_path("theme-default-dark.css") %>';
          head.appendChild(darkThemeLink);

          document.addEventListener("DOMContentLoaded", function () {
            const darkStyle = document.createElement('style');
            darkStyle.id = 'dark-toast-style';
            darkStyle.innerHTML = `
              .toast-success {
                background-color: #2b2c40 !important;
              }
              .toast-error {
                background-color: #2b2c40 !important;
              }
            `;
            document.head.appendChild(darkStyle);

            const existingLightStyle = document.getElementById('light-toast-style');
            if (existingLightStyle) {
              existingLightStyle.remove(); // Removes the <style> element from the DOM
            }
          });
        } else {
          document.addEventListener("DOMContentLoaded", function () {
            const lightStyle = document.createElement('style');
            lightStyle.id = 'light-toast-style';
            lightStyle.innerHTML = `
              .toast-success {
                background-color: #ffffff !important;
              }
              .toast-error {
                background-color: #ffffff !important;
              }
            `;
            document.head.appendChild(lightStyle);

            const existingDarkStyle = document.getElementById('dark-toast-style');
            if (existingDarkStyle) {
              existingDarkStyle.remove(); // Removes the <style> element from the DOM
            }
          });
        }

        document.addEventListener("DOMContentLoaded", function () {
          const dynamicDiv = document.getElementById("dynamic-background");
          const invertSignature = document.getElementById("invert-signature");
          const invertCreatedSignature = document.getElementById("invert-created-signature");

          if (dynamicDiv && invertSignature) {
            dynamicDiv.style.backgroundColor = isDarkTheme ? "#2b2c40" : "#fff";
            invertSignature.style.filter = isDarkTheme ? "invert(1) brightness(2)" : "";
          }

          if(invertCreatedSignature) {
            invertCreatedSignature.style.filter = isDarkTheme ? "invert(1) brightness(2)" : "";
          }
        });
      })();
    </script>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        // Select all elements with the `disable-modal-popup` class
        const inputs = document.querySelectorAll('.disable-modal-popup');

        inputs.forEach(input => {
          input.addEventListener('keydown', function (event) {
            if (event.key === 'Enter') {
              // Prevent the default action (e.g., modal popup or form submission)
              event.preventDefault();
            }
          });
        });
      });
    </script>

    <%= javascript_importmap_tags %>
    <%= favicon_link_tag asset_path('brand_logo.png'), rel: 'icon', sizes: '180x180' %>
  </head>
  <body>
  <!-- <body data-core-dark-path="<%= asset_path('core-dark.css') %>" data-theme-dark-path="<%= asset_path('theme-default-dark.css') %>"> -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <%= render partial: "layouts/flash_messages/toastr"%>
        <div class="container-fluid flex-grow-1 container-p-y">
          <%= yield %>
        </div>
        <div class="content-backdrop fade"></div>
      </div>
      <div class="layout-overlay layout-menu-toggle"></div>
      <div class="drag-target"></div>
    </div>
  </body>
  <script src="https://rentdito-js.s3.ap-southeast-2.amazonaws.com/helpers.js"></script>
  <script type="module" src="https://rentdito-js.s3.ap-southeast-2.amazonaws.com/controllers/menu_controller.js"></script>
  <script type="module" src="https://rentdito-js.s3.ap-southeast-2.amazonaws.com/controllers/bridge/form_controller.js"></script>
  <script type="module" src="https://rentdito-js.s3.ap-southeast-2.amazonaws.com/controllers/bridge/menu_controller.js"></script>
  <script type="module" src="https://rentdito-js.s3.ap-southeast-2.amazonaws.com/controllers/bridge/overflow_menu_controller.js"></script>
</html>
