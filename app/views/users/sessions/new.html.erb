<div class="authentication-wrapper authentication-cover" bis_skin_checked="1">
  <a href="javascript:void(0)" class="app-brand auth-cover-brand gap-2">
    <span class="app-brand-logo demo">
      <%= image_tag "dark_brand_logo.png", class: "img-fluid", width: "100", alt: "Brand Logo" %>
    </span>
    <span class="app-brand-text demo text-heading fw-bold">RentDito</span>
  </a>

  <div class="authentication-inner row m-0" bis_skin_checked="1">
    <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center p-5" bis_skin_checked="1">
      <div class="w-100 d-flex justify-content-center" bis_skin_checked="1">
        <%= image_tag "rent.png", class: "img-fluid", width: "500", alt: "Login Image" %>
      </div>
    </div>

    <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg p-sm-12 p-6" bis_skin_checked="1">
      <div class="w-px-400 mx-auto mt-12 pt-5" bis_skin_checked="1">
        <h4 class="mb-1">Welcome to RentDito! 👋</h4>
        <p class="mb-6">Please sign-in to your account</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-6" }) do |f| %>
          <div class="mb-6 fv-plugins-icon-container" bis_skin_checked="1">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email,
                              placeholder: "kiyoscript@gmail.com",
                              autocomplete: "email",
                              class: "form-control",
                              id: "user_email",
                              required: true %>
          </div>

          <div class="mb-6 form-password-toggle fv-plugins-icon-container" bis_skin_checked="1">
            <%= f.label :password, class: "form-label"%>
            <div class="input-group input-group-merge has-validation" bis_skin_checked="1">
              <%= f.password_field :password, autocomplete: "current-password",
                                    class: "form-control",
                                    id: "user_password",
                                    placeholder: "············",
                                    required: true %>
              <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
            </div>
          </div>

          <div class="my-8" bis_skin_checked="1">
            <div class="d-flex justify-content-between" bis_skin_checked="1">
              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-0 ms-2" bis_skin_checked="1">
                  <%= f.check_box :remember_me,
                                  class: "form-check-input",
                                  id: "user_remember_me" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              <% end %>
              <%= link_to "Forgot password?", new_password_path(resource_name) %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign in", class: "btn btn-primary d-grid w-100" %>
          </div>
        <% end %>
