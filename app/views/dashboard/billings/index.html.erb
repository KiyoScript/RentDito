<div class="card">
  <h5 class="card-header">Billings</h5>
  <div class="row px-4 pt-0">
    <div class="col-12">
      <div class="row">
        <div class="col-12 col-md-9 text-primary p-3 order-md-2 text-end">
          <button class="btn btn-outline-primary d-none d-md-inline-block d-flex justify-content-center" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilter" aria-controls="offcanvasFilter">
            <i class='bx bx-filter-alt'></i>
            <span class="text-normal text-nowrap">Filter</span>
          </button>
          <button class="btn btn-outline-primary w-100 d-flex d-md-none  justify-content-center" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilter" aria-controls="offcanvasFilter">
            <i class='bx bx-filter-alt'></i>
            <span class="text-normal text-nowrap">Filter</span>
          </button>
          <% if current_user.landlord? || current_user.admin? %>
            <%= link_to new_dashboard_billing_path, class: "btn btn-primary d-none d-md-inline-block ms-2 pb-2" do %>
              <i class='bx bx-home-circle'></i>
              <span class="mt-1 text-nowrap">New Billing</span>
            <% end %>
            <%= link_to new_dashboard_billing_path, class: "btn btn-primary w-100 d-inline-block d-md-none mt-2 pb-2" do %>
              <i class='bx bx-home-circle'></i>
              <span class="mt-1">New Billing</span>
            <% end %>
          <% end %>
        </div>

        <%= search_form_for @q, url: dashboard_billings_path, method: :get, class: "offcanvas offcanvas-end", id: "offcanvasFilter" do |form| %>
          <div class="offcanvas-header">
           <h4 id="offcanvasFilterLabel" class="d-flex align-items-center justify-content-center text-primary gap-2">
            <i class='bx bx-filter-alt fs-4'></i> SEARCH FILTER
           </h4>
           <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body mx-0 flex-grow-0 p-6 h-100 d-flex flex-column justify-content-between">
            <div class="mb-3">
              <h5 class="text-primary">By Property</h5>
              <%= form.select :property_id_eq, Property.all.map { |p| [p.address, p.id] }, { selected: params.dig(:q, :property_id_eq) }, class: 'form-select' %>

            </div>

            <div class="d-flex flex-column justify-content-between align-items-center gap-2">
              <%= form.submit 'Apply', class: 'btn btn-primary w-100' %>
              <%= link_to 'Reset', dashboard_billings_path(q: {}), class: 'btn btn-label-danger w-100' %>
            </div>
          </div>
        <% end %>

        <div class="col-12 col-md-3 py-0 py-lg-3 px-lg-3  order-md-1 mb-2">
          <%= search_form_for @q, url: dashboard_billings_path, class: "d-flex align-items-center gap-2" do |form| %>
            <%= form.label :search, class: "d-none" %>
            <%= form.search_field :number_cont, class: "form-control", placeholder: "Type to search", id: 'q_search' %>
            <%= form.submit class: 'btn btn-outline-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="table-responsive text-nowrap">
    <table class="table">
      <thead>
        <tr>
          <th>Month of Billing</th>
          <th>Billing No.</th>
          <th>Property</th>
          <th>Total Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
        <%= render partial: "dashboard/billings/billing", collection: @billings, as: :billing %>
      </tbody>
    </table>
  </div>

  <% unless @billings.present? %>
    <div class="container d-flex align-items-center justify-content-center flex-column p-4">
      <%= image_tag 'no_search.svg', class: "img-fluid", width: "400", alt: "No Seach Found"%>
      <p class="text-dark mb-0"> Ups!... no records found</p>
    </div>
  <% end %>

  <% if @billings.present? %>
    <div class="d-flex justify-content-center pt-2">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>
