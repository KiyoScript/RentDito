<tr>
  <td>
    <div class="d-flex justify-content-start align-items-center user-name" >
      <div class="avatar-wrapper">
        <div class="avatar me-2">
          <span class="avatar-initial bg-label-primary"><%= room.name %></span>
        </div>
      </div>
      <div class="d-flex flex-column" >
        <span class="emp_name text-truncate"><%= room.property.address %></span>
        <small class="emp_post text-truncate text-info"><%= room.property_unit.name %></small>
      </div>
    </div>
  </td>
  <td> <%= room.accomodation.humanize %></td>
  <td> <%= deck_badge(room.upper_deck) %> </td>
  <td> <%= deck_badge(room.lower_deck) %> </td>
   <td>
    <div class="d-inline-block">
      <%= link_to dashboard_room_path(room), class: "btn btn-icon view-record border" do %>
        <i class="bx bx-show bx-md"></i>
      <% end %>

      <% if current_user.landlord? %>
        <%= link_to dashboard_room_path(room), class: "btn btn-icon text-danger border", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove Room #'#{room.name}'?" } do %>
          <i class="bx bx-trash bx-md"></i>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
