<%= form_with model: @room, url: dashboard_rooms_path, method: :post, local: true, html: { class: "card" },  data: { controller: "room-form" } do |form| %>
  <h4 class="card-header text-primary">New Room</h4>
  <div class="card-body">

    <div class="mb-6">
      <div class="alert alert-info" role="alert">
        <strong>Note:</strong>
        Fill up necessary information to create a new room.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :property_id, "Property", class: "form-label fs-6" %>
      <%= form.select :property_id, options_for_select(Property.all.map { |p| [p.address, p.id] }), { prompt: "Property" }, class: "form-select", data: { action: "change->room-form#loadPropertyUnits" }, required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :property_unit_id, "Property Unit", class: "form-label fs-6" %>
      <%= form.select :property_unit_id, options_for_select([]), class: "form-select", prompt: "Property Unit", required: true%>
    </div>

    <div class="mb-3">
      <%= form.label :name, "Room Name", class: "form-label fs-6" %>
      <%= form.text_field :name, class: "form-control", min: "0", placeholder: "3" %>
    </div>

    <div class="mb-3">
      <%= form.label :lower_deck, "Lower Deck", class: "form-label fs-6" %>
      <%= form.number_field :lower_deck, class: "form-control fs-6", min: "0", placeholder: "1", value: 1 %>
    </div>

    <div class="mb-3">
      <%= form.label :upper_deck, "Upper Deck", class: "form-label fs-6"%>
      <%= form.number_field :upper_deck, class: "form-control", placeholder: "2", value: 2 %>
    </div>
  </div>

 <div class="card-footer d-flex align-items-center justify-content-between">
    <%= link_to dashboard_rooms_path, class: 'btn btn-secondary d-none d-md-inline-block ' do %>
      <i class='bx bxs-left-arrow bx-sm' ></i>
      <span class="fs-6">Back</span>
    <% end %>

    <%= link_to dashboard_rooms_path, class: 'btn btn-secondary d-inline-block d-md-none' do %>
      <i class='bx bxs-left-arrow bx-sm' ></i>
      <span class="fs-6">Back</span>
    <% end %>

    <%= form.submit "Create Room", class: "btn btn-primary" %>
  </div>
<% end %>
