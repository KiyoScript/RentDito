<%= form_with model: User.new, url: dashboard_admins_path, method: :post, html: { class: "card", data: { controller: "password new-admin-validation bridge--form", action: "turbo:submit-start->bridge--form#submitStart turbo:submit-end->bridge--form#submitEnd", new_admin_validation_target: "wizardValidationForm"}} do |form| %>
  <h4 class="card-header text-primary">New Admin</h4>
  <div class="card-body">
    <div class="mb-6">
      <div class="alert alert-info" role="alert">
        <strong>Note:</strong>
        Fill up necessary information to create a new administrator account.
      </div>
    </div>

    <div class="form-group mb-6">
      <%= form.label :firstname, class: "form-label" %>
      <%= form.text_field :firstname, class: "form-control", id: "user_firstname", placeholder: "Kiyo",  data: { new_admin_validation_target: "firstname" } %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :lastname, class: "form-label" %>
      <%= form.text_field :lastname, class: "form-control", id: "user_lastname", placeholder: "Script",  data: { new_admin_validation_target: "lastname" } %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", id: "user_email", placeholder: "kiyo@example.com",  data: { new_admin_validation_target: "email" } %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :phone_number, class: "form-label" %>
      <%= form.telephone_field :phone_number, class: "form-control", id: "user_phone_number", placeholder: "0963 631 5870",  data: { new_admin_validation_target: "phoneNumber" } %>
    </div>

    <div class="form-group mb-6" data-new-admin-validation-target="gender">
      <%= form.label :gender, "Gender", class: "form-label", for: "user_gender" %>
      <div class="form-check">
        <%= form.radio_button :gender, :male, { class: "form-check-input", id: "gender_male", data: { new_admin_validation_target: "genderMale" } } %>
        <%= form.label :gender_male, "Male", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :gender, :female, { class: "form-check-input", id: "gender_female", data: { new_admin_validation_target: "genderFemale" } } %>
        <%= form.label :gender_female, "Female", class: "form-check-label" %>
      </div>
    </div>


    <%= form.hidden_field :status, value: "incomplete" %>
    <%= form.hidden_field :role, value: "admin" %>

    <div class="form-group mb-6 form-password-toggle">
      <%= form.label :password, class: "form-label" %>
      <div class="input-group input-group-merge has-validation">
        <%= form.password_field :password, autocomplete: "current-password",
                              class: "form-control",
                              id: "user_password",
                              placeholder: "············",
                              data: { new_admin_validation_target: "password", password_target: "password"  } %>
        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
      </div>
    </div>

    <div class="form-group mb-6 form-password-toggle">
      <%= form.label :password_confirmation, class: "form-label" %>
      <div class="input-group input-group-merge has-validation">
        <%= form.password_field :password_confirmation, autocomplete: "current-password",
                              class: "form-control",
                              id: "user_password_confirmation",
                              placeholder: "············",
                              data: { new_admin_validation_target: "passwordConfirmation", password_target: "passwordConfirmation"  } %>
        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
      </div>
    </div>

    <button type="button" class="btn col-12 col-md-3 btn-outline-secondary" data-action="click->password#generatePassword">
      Generate Password
    </button>
  </div>

  <div class="card-footer d-flex align-items-center justify-content-between">

    <%= link_to dashboard_admins_path, class: 'btn btn-secondary d-none d-md-inline-block ' do %>
      <span class="fs-6">Back</span>
    <% end %>

    <%= form.submit "Create Admin", class: "btn btn-primary d-none d-md-inline-block" %>
    <%= form.submit "Create Admin", class: "btn btn-primary w-100 d-md-none d-inline-block hidden-element", data: { "bridge--form-target" => "submit", "bridge-title" => "Create" } %>
  </div>
<% end %>