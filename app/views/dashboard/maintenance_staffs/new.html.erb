<%= form_with model: @maintenance_staff, url: dashboard_maintenance_staffs_path, method: :post, html: { class: "card", data: { controller: "password" } } do |form| %>
  <h4 class="card-header text-primary">New Maintenance Staff</h4>
  <div class="card-body">
    <div class="mb-6">
      <div class="alert alert-info" role="alert">
        <strong>Note:</strong>
        Fill up necessary information to create a new Maintenance Staff Account.
      </div>
    </div>

    <div class="mb-6">
      <%= form.label :firstname, class: "form-label fs-6" %>
      <%= form.text_field :firstname, class: "form-control", id: "user_firstname", placeholder: "Kiyo", required: true %>
    </div>

    <div class="mb-6">
      <%= form.label :lastname, class: "form-label fs-6" %>
      <%= form.text_field :lastname, class: "form-control", id: "user_lastname", placeholder: "Script", required: true %>
    </div>

    <div class="mb-6">
      <%= form.label :email, class: "form-label fs-6" %>
      <%= form.email_field :email, class: "form-control", id: "user_email", placeholder: "kiyo@example.com", required: true %>
    </div>

    <div class="mb-6">
      <%= form.label :phone_number, class: "form-label fs-6" %>
      <%= form.telephone_field :phone_number, class: "form-control", id: "user_phone_number", placeholder: "0963 631 5870", required: true %>
    </div>

    <div class="mb-6">
      <%= form.label :gender, class: "form-label fs-6" %>
      <div class="form-check">
        <%= form.radio_button :gender, :male, class: "form-check-input", id: "gender_male" %>
        <%= form.label :gender_male, "Male", class: "form-check-label", required: true %>
      </div>
      <div class="form-check">
        <%= form.radio_button :gender, :female, class: "form-check-input", id: "gender_female" %>
        <%= form.label :gender_female, "Female", class: "form-check-label", required: true %>
      </div>
    </div>

    <%= form.fields_for :maintenance_staff do |m| %>
      <div class="mb-6">
        <%= m.label :city, "City", class: "form-label fs-6" %>
        <%= m.select :city, options_for_select(MaintenanceStaff.cities.keys.map { |key| [key.titleize, key] }), {},
                      class: "form-select", prompt: "Select City" %>
      </div>
    <% end %>

    <%= form.hidden_field :status, value: "incomplete" %>
    <%= form.hidden_field :role, value: "maintenance_staff" %>

    <div class="mb-6 form-password-toggle">
      <%= form.label :password, class: "form-label fs-6" %>
      <div class="input-group input-group-merge has-validation">
        <%= form.password_field :password, autocomplete: "current-password",
                              class: "form-control",
                              id: "user_password",
                              placeholder: "············",
                              required: true,
                              data: { password_target: "password" } %>
        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
      </div>
    </div>

    <div class="mb-6 form-password-toggle">
      <%= form.label :password_confirmation, class: "form-label fs-6" %>
      <div class="input-group input-group-merge has-validation">
        <%= form.password_field :password_confirmation, autocomplete: "current-password",
                              class: "form-control",
                              id: "user_password_confirmation",
                              placeholder: "············",
                              required: true,
                              data: { password_target: "passwordConfirmation" } %>
        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
      </div>
    </div>

    <button type="button" class="btn btn-outline-secondary" data-action="click->password#generatePassword">
      Generate Password
    </button>
  </div>

  <div class="card-footer d-flex align-items-center justify-content-between">
    <%= link_to dashboard_maintenance_staffs_path, class: 'btn btn-secondary d-none d-md-inline-block ' do %>
      <span class="fs-6">Back</span>
    <% end %>

    <%= form.submit "Create Maintenance Staff", class: "btn btn-primary d-none d-md-inline-block" %>
    <%= form.submit "Create Maintenance Staff", class: "btn btn-primary w-100 d-inline-block d-md-none" %>
  </div>
<% end %>
