<div class="card">
  <h5 class="card-header">Properties</h5>
  <div class="row p-4 pt-0">
    <div class="col-12">
      <div class="row">
        <div class="col-12 text-primary p-3 text-end">
          <button class="btn btn-outline-primary d-none d-md-inline-block d-flex justify-content-center" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilter" aria-controls="offcanvasFilter">
            <i class='bx bx-filter-alt'></i>
            <span class="text-normal text-nowrap">Filter</span>
          </button>
          <button class="btn btn-outline-primary w-100 d-flex d-md-none  justify-content-center" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilter" aria-controls="offcanvasFilter">
            <i class='bx bx-filter-alt'></i>
            <span class="text-normal text-nowrap">Filter</span>
          </button>
          <%= link_to new_dashboard_property_path, class: "btn btn-primary d-none d-md-inline-block ms-2 pb-2" do %>
            <i class='bx bx-home-circle'></i>
            <span class="mt-1 text-nowrap">New Property</span>
          <% end %>
          <%= link_to new_dashboard_property_path, class: "btn btn-primary w-100 d-inline-block d-md-none mt-2 pb-2" do %>
            <i class='bx bx-home-circle'></i>
            <span class="mt-1">New Property</span>
          <% end %>
        </div>

        <!-- Filter OffCanvas -->
        <%= search_form_for @q, url: dashboard_properties_path, method: :get, class: "offcanvas offcanvas-end", id: "offcanvasFilter" do |form| %>
          <div class="offcanvas-header">
            <h4 id="offcanvasFilterLabel" class="d-flex align-items-center justify-content-center text-primary gap-2">
              <i class='bx bx-filter-alt fs-4 '></i> SEARCH FILTER
            </h4>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body mx-0 flex-grow-0 p-6 h-100 d-flex flex-column justify-content-between">
            <div class="mb-3">
              <h5 class="text-primary">By City</h5>
              <%= form.select :city_eq, Property.cities.keys.map { |b| [b.titleize, b] }, { selected: Property.cities.keys.first }, class: 'form-select' %>
              <h5 class="text-primary">By Barangay</h5>
              <%= form.select :barangay_eq, Property.barangays.keys.map { |b| [b.titleize, b] }, { selected: Property.barangays.keys.first }, class: 'form-select' %>
            </div>

            <div class="d-flex flex-column justify-content-between align-items-center gap-2">
              <%= form.submit 'Apply', class: 'btn btn-primary w-100' %>
              <%= link_to 'Reset', dashboard_properties_path(q: {}), class: 'btn btn-label-danger w-100' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="table-responsive text-nowrap">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Property Address</th>
          <th>Units</th>
          <th>Caretakers</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
        <%= render partial: "dashboard/properties/property", collection: @properties, as: :property %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center pt-2">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
