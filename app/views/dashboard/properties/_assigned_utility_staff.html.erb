<div class="d-flex justify-content-start align-items-center mb-6" >
  <div class="avatar me-3" >
    <img src="<%= avatar(utility_staff.user) %>" alt="Avatar" class="rounded-circle">
  </div>
  <div class="d-flex flex-column" >
    <%= link_to profile_path(utility_staff.user), class: "text-body text-nowrap" do %>
      <h6 class="mb-0"><%= utility_staff.user.fullname %></h6>
    <% end %>
    <span>Gender: <%= gender_badge(utility_staff.user.gender) %></span>
  </div>
</div>
<div class="d-flex justify-content-between" >
  <h6 class="mb-1 text-primary">Contact info</h6>
</div>
  <p class="mb-1">Email: <%= utility_staff.user.email %></p>
  <p class="mb-0">Phone Number: <%= utility_staff.user.phone_number %> </p>
<div class="divider">
  <div class="divider-text"></div>
</div>
