<div class="card">
  <div class="d-flex justify-content-between align-items-center">
    <h5 class="card-header">Feedbacks</h5>

    <%= search_form_for @q, url: dashboard_feedbacks_path, method: :get, class: "d-flex gap-2 align-items-center pe-3 w-100 d-none d-sm-flex" do |form| %>
      <%= form.text_field :suggestion_cont, placeholder: "Type to search", class: "form-control w-100", value: params.dig(:q, :message_cont) %>
      <%= button_tag(type: 'submit', class: 'btn btn-outline-secondary') do %><i class="bx bx-search"></i><span class="d-none d-sm-inline">&nbsp;Search</span><% end %>
    <% end %>
  </div>
  <%= search_form_for @q, url: dashboard_feedbacks_path, method: :get, class: "d-flex gap-2 align-items-center px-3 pb-3 d-flex d-sm-none" do |form| %>
      <%= form.text_field :suggestion_cont, placeholder: "Type to search", class: "form-control", value: params.dig(:q, :message_cont) %>
      <%= button_tag(type: 'submit', class: 'btn btn-outline-secondary') do %><i class="bx bx-search"></i><span class="d-none d-sm-inline">&nbsp;Search</span><% end %>
    <% end %>

  <div class="table-responsive text-nowrap">
    <table class="table">
      <tbody class="table-border-bottom-0">
        <%= render partial: "dashboard/feedbacks/feedback", collection: @feedbacks, as: :feedback %>
      </tbody>
    </table>
  </div>

  <% if @feedbacks.blank? %>
    <div class="container d-flex align-items-center justify-content-center flex-column p-4">
      <%= image_tag 'no_search.svg', class: "img-fluid", width: "400", alt: "No Feedbacks Found" %>
      <p class="text-dark mb-0">Oops! No feedbacks found</p>
    </div>
  <% else %>
    <div class="d-flex justify-content-center pt-2">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>