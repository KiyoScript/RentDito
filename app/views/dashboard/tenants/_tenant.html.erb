<tr data-controller="user-status" data-user-status-user-id="<%= tenant.id %>
">
  <td>
    <div class="d-flex justify-content-start align-items-center user-name" >
      <div class="avatar-wrapper">
        <div class="avatar me-2">
          <img src="<%= avatar(tenant) %>" alt="Avatar" class="w-px-40 h-auto rounded-circle">
          <%# <span class="avatar-initial rounded-circle bg-label-dark">KS</span> %>
        </div>
      </div>
      <div class="d-flex flex-column" >
        <span class="emp_name text-truncate"><%= tenant.fullname %></span>
        <small class="emp_post text-truncate text-muted"><%= tenant.role %></small>
      </div>
    </div>
  </td>
  <td><%= tenant.email %></td>
  <td>
    <%= gender_badge(tenant.gender) %>
  </td>
  <td>
    <%= tenant.tenant.property.address %>
  </td>
  <td data-user-status-target="statusLabel">
    <%= status_badge(tenant.status) %>
  </td>
  <td>
    <div class="d-inline-block">
      <%= link_to profile_path(tenant), class: "btn btn-icon view-record border" do %>
        <i class="bx bx-show bx-md"></i>
      <% end %>
      <% if current_user.landlord? %>
        <%= link_to "javascript:void(0);", class: "btn btn-icon text-danger border", data: { action: "click->user-status#updateStatus", user_status_status: "deactivated" } do %>
          <i class='bx bx-user-x bx-md' data-user-status-status="deactivated"></i>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
