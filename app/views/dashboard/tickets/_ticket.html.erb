<tr>
  <td>#<%= ticket.id %></td>
  <td><%= label_badge(ticket.label) %></td>
  <td><%= ticket.title.chomp('.') %></td>
  <td><%= ticket.category.titleize %></td>
  <td><%= status_badge(ticket.status)%></td>
   <td>
    <div class="d-inline-block">
      <%= link_to dashboard_ticket_path(ticket), class: "btn btn-icon view-record border" do %>
        <i class="bx bx-show bx-md"></i>
      <% end %>

      <% if current_user.tenant? %>
        <%= link_to dashboard_ticket_path(ticket), class: "btn btn-icon text-danger border", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this ticket?" } do %>
          <i class="bx bx-trash bx-md"></i>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
