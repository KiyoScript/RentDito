<div class="list-group-item d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <img src="<%= avatar(tenant.user) %>" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover; margin-right: 15px;">
    <div>
      <h6 class="font-weight-bold mb-1"><%= tenant.user.fullname %></h6>
      <p class="text-muted mb-0">Room: <span class="ms-2 text-muted"><%= tenant.room.name %></span></p>
    </div>
  </div>
  <%= link_to profile_path(tenant.user), class: "btn btn-icon view-record border" do %>
    <i class="bx bx-show bx-md"></i>
  <% end %>
</div>
