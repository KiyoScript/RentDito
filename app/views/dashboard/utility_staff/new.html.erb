<%= form_with model: @utility_staff, url: dashboard_utility_staff_index_path, method: :post, html: { class: "card", data: { controller: "password load-properties form-validation"} } do |form| %>
  <h4 class="card-header text-primary">New Utility Staff</h4>
  <div class="card-body">
    <div class="mb-6">
      <div class="alert alert-info" role="alert">
        <strong>Note:</strong>
        Fill up necessary information to create a new Utility Staff Account.
      </div>
    </div>

    <div class="form-group mb-6">
      <%= form.label :firstname, class: "form-label" %>
      <%= form.text_field :firstname, class: "form-control", id: "user_firstname", placeholder: "Kiyo", data: { form_validation_target: 'firstname'} %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :lastname, class: "form-label" %>
      <%= form.text_field :lastname, class: "form-control", id: "user_lastname", placeholder: "Script", data: { form_validation_target: 'lastname'} %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", id: "user_email", placeholder: "kiyo@example.com", data: { form_validation_target: 'email' } %>
    </div>

    <div class="form-group mb-6">
      <%= form.label :phone_number, class: "form-label" %>
      <%= form.telephone_field :phone_number, class: "form-control", id: "user_phone_number", placeholder: "0963 631 5870", data: { form_validation_target: 'phoneNumber'} %>
    </div>

    <div class="form-group mb-6" data-form-validation-target="gender">
      <%= form.label :gender, "Gender", class: "form-label", for: "user_gender" %>
      <div class="form-check">
        <%= form.radio_button :gender, :male, { class: "form-check-input", id: "gender_male", data: { form_validation_target: "genderMale" } } %>
        <%= form.label :gender_male, "Male", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :gender, :female, { class: "form-check-input", id: "gender_female", data: { form_validation_target: "genderFemale" } } %>
        <%= form.label :gender_female, "Female", class: "form-check-label" %>
      </div>
    </div>

    <%= form.fields_for :utility_staff do |u| %>
      <div class="form-group mb-6">
        <%= u.label :property_id, "Property", class: "form-label" %>
        <%= u.select :property_id, options_for_select(Property.all.map { |p| [p.address, p.id] }), { prompt: "Property" }, class: "form-select", data: { action: "change->load-properties#loadPropertyUnits", form_validation_target: "property" } %>
      </div>

      <div class="form-group mb-6">
        <%= u.label :property_unit_id, "Property Code", class: "form-label fs-6" %>
        <%= u.select :property_unit_id, [], { prompt: "Choose Property Code" }, class: "form-select", id: "user_property_unit", data: { form_validation_target: "propertyCode"} %>
      </div>

      <div class="form-group mb-6">
        <%= u.label :room_id, "Room #", class: "form-label fs-6" %>
        <%= u.select :room_id, [], { prompt: "Choose Room" }, class: "form-select", id: "user_room", data: { action: "change->load-properties#loadDecks", form_validation_target: "room" } %>
      </div>

      <div class="form-group mb-6">
        <%= u.label :deck, "Deck", class: "form-label fs-6" %>
        <%= u.select :deck, [], { prompt: "Choose Deck" }, class: "form-select", id: "user_deck", data: { load_properties_target: "deck", form_validation_target: "deck" } %>
      </div>

      <div class="form-group mb-6">
        <%= u.label :check_in, "Check In", class: "form-label fs-6" %>
        <%= u.datetime_field :check_in, value: DateTime.now.strftime('%Y-%m-%dT%H:%M'), class: "form-select", data: { form_validation_target: "checkIn"} %>
      </div>
    <% end %>

    <%= form.hidden_field :status, value: "incomplete" %>
    <%= form.hidden_field :role, value: "utility_staff" %>

    <div class="form-group mb-6 form-password-toggle">
      <%= form.label :password, class: "form-label" %>
      <div class="input-group input-group-merge has-validation">
        <%= form.password_field :password, autocomplete: "current-password",
                              class: "form-control",
                              id: "user_password",
                              placeholder: "············",
                              data: { password_target: "password", form_validation_target: "password" } %>
        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
      </div>
    </div>

    <div class="form-group mb-6 form-password-toggle">
      <%= form.label :password_confirmation, class: "form-label" %>
      <div class="input-group input-group-merge has-validation">
        <%= form.password_field :password_confirmation, autocomplete: "current-password",
                              class: "form-control",
                              id: "user_password_confirmation",
                              placeholder: "············",
                              data: { password_target: "passwordConfirmation", form_validation_target: "passwordConfirmation" } %>
        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
      </div>
    </div>

    <button type="button" class="btn btn-outline-secondary" data-action="click->password#generatePassword">
      Generate Password
    </button>
  </div>

  <div class="card-footer d-flex align-items-center justify-content-between">
    <%= link_to dashboard_utility_staff_index_path, class: 'btn btn-secondary d-none d-md-inline-block ' do %>
      <span class="fs-6">Back</span>
    <% end %>

    <%= form.submit "Create Utility Staff", class: "btn btn-primary d-none d-md-inline-block" %>
    <%= form.submit "Create Utility Staff", class: "btn btn-primary w-100 d-inline-block d-md-none" %>
  </div>
<% end %>
